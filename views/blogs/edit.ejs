<!--THIS IS TO EDIT ARTICLES ALREADY POSTED TO THE MAGAZINE-->

<% include ../partials/header %>
       
       <section class="edit-article-form-section">
            <div class="row">
                <h1 class="blog-title">Edit: <%= blog.title %></h1>
            </div>
            
            <div class="row">
                <form action="/<%= blog._id %>?_method=PUT" method="POST" class="edit-article-form"> <!--method override, see video 269 minute 10:45 -->
            
            <div class="row">
                 <div class="col span-1-of-3 label">
                     <label for="title">Title:</label>
                 </div>
                 <div class="col span-2-of-3">
                     <input type="text" name="blog[title]" value="<%= blog.title %>">
                 </div>
             </div>
         
     <div class="row">
          <div class="col span-1-of-3 label">
              <label for="imageOne">Story Image One:</label>
          </div>
        <div class="col span-2-of-3">
            <input type="text" name="blog[imageOne]" value="<%= blog.imageOne %>">            
        </div>         
     </div>
     
    <div class="row">
          <div class="col span-1-of-3 label">
              <label for="imageTwo">Story Image Two:</label>
          </div>
        <div class="col span-2-of-3">
            <input type="text" name="blog[imageTwo]" value="<%= blog.imageTwo %>">           
        </div>         
     </div>
       
    <div class="row">
          <div class="col span-1-of-3 label">
              <label for="imageThree">Story Image Three:</label>
          </div>
        <div class="col span-2-of-3">
            <input type="text" name="blog[imageThree]" value="<%= blog.imageThree %>">           
        </div>         
     </div>
       
    <div class="row">
          <div class="col span-1-of-3 label">
              <label for="body">Story Content:</label>
          </div>
        <div class="col span-2-of-3">
            <textarea name="blog[body]"><%= blog.body %></textarea>           
        </div>         
     </div>
       
    <div class="row">
          <div class="col span-1-of-3 label">
              <label for="category">Category:</label>
          </div>
        <div class="col span-2-of-3">
             <input class="category" type="text" name="blog[category]" value="<%= blog.category %>">           
        </div>         
     </div>
     
     <div class="row">
             <div class="col span-1-of-3">
             <label>&nbsp;</label>
             </div>
             
             <div class="col span-2-of-3">
             <input value="Submit Story" type="submit">
             <a href="/"><button type="button" class="cancelBtn">Cancel</button></a>
             </div>
             </div>
            </form>
        </div>
    </section>



<% include ../partials/footer %>