<!--THIS IS TO ADD NEW ARTICLES/POSTS TO THE MAGAZINE-->

<% include ../partials/form-header %>


   
      <div class="row">
       <form class="new-article-form" action="/" method="POST">
        <div class="row">
            <h1 class="submit-your-story-title">Submit Your Story</h1>
             <p class="required-field">&#42; Denotes Required Fields</p>
        </div>
    
      <!------------------------------------------------------------------------------------>
       
        <div class="row">
            <div class="col span-3-of-3">            
                <label for="title" class="new-article-form-label">Title&#42;</label>
            </div>
         </div>
    
        <div class="row">         
            <div class="col span-3-of-3">
               <input type="text" name="title" class="new-article-form" required>                             
            </div>
        </div>
    <!------------------------------------------------------------------------------------>
        <div class="row">
            <div class="col span-3-of-3">            
                <label for="firstName" class="new-article-form-label">First Image&#42;</label>
            </div>
         </div>
    
        <div class="row">         
            <div class="col span-3-of-3">
              <input type="text" name="imageOne" class="new-article-form" required>                              
            </div>
        </div>
        
        
    <!------------------------------------------------------------------------------------>
    
     <div class="row">
            <div class="col span-3-of-3">            
                <label for="firstName" class="new-article-form-label">Second Image</label>
            </div>
         </div>
    
        <div class="row">         
            <div class="col span-3-of-3">
              <input type="text" name="imageTwo" class="new-article-form">                              
            </div>
        </div>
       
    <!------------------------------------------------------------------------------------>
         <div class="row">
            <div class="col span-3-of-3">            
                <label for="firstName" class="new-article-form-label">Third Image</label>
            </div>
         </div>
    
        <div class="row">         
            <div class="col span-3-of-3">
              <input type="text" name="imageThree" class="new-article-form">                              
            </div>
        </div>                                                      
       
    <!------------------------------------------------------------------------------------>   
               
        <div class="row">
            <div class="col span-3-of-3">
                <label for="firstName" class="new-article-form-label">Story Content&#42;</label>
            </div>
            <div class="col span-3-of-3">
                <textarea name="body" placeholder="Story goes here..."></textarea>                               
            </div>
        </div>
        
    <!------------------------------------------------------------------------------------>   
        
        
        <div class="row">
           <div class="col span-3-of-3">
              <label for="category" class="new-article-form-label">Choose Story Category&#42;</label>               
           </div>
           <div class="col span-3-of-3">                
                <select name="category">
                     <option value="#" selected>Choose a category</option>
                     <option value="business">business</option>
                     <option value="culture">culture</option>
                     <option value="entertainment">entertainment</option>
                     <option value="fashion">fashion</option>
                     <option value="headlines">headlines</option>
                     <option value="news">news</option>
                     <option value="opinions">opinions</option>
                     <option value="politics">politics</option>
                     <option value="religion">religion</option>
                     <option value="sports">sports</option>
                 </select>
            </div>
            
    <!------------------------------------------------------------------------------------>   

            
            <div class="col span-2-of-3"> 
                <input value="Submit Story" type="submit">                
                <a href="/"><button type="button" class="cancelBtn">Cancel</button></a>                
           </div>                 
           </div>
        </form>
     </div>




<% include ../partials/footer %>

 